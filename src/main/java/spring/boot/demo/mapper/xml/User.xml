<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="spring.boot.demo.mapper.UserMapper">

	<insert id="insertUser" parameterType="spring.boot.demo.bean.UserBean">
		INSERT INTO `T_USER` (
			`USER_NAME`,
			`PASSWORD`,
			`PHONE`,
			`CREATE_TIME`
		)
		VALUES
			(
			#{userName},
			#{password},
			#{phone},
			now()
			)
	</insert>
	
	<select id="findUserById" resultType="spring.boot.demo.bean.UserBean">
		SELECT 
			`USER_NAME`,
			`PASSWORD`,
			`PHONE`,
			`CREATE_TIME`
 		FROM 
 			T_USER 
 		WHERE 
 			ID=#{id}
	</select>

</mapper>